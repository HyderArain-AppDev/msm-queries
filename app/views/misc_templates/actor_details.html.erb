
    <h1>
  Actor #<%=@act_id%> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;


<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=Actor.where({:id => @act_id}).at(0).name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=Actor.where({:id => @act_id}).at(0).dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=Actor.where({:id => @act_id}).at(0).bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%=Actor.where({:id => @act_id}).at(0).image%>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=Actor.where({:id => @act_id}).at(0).created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=Actor.where({:id => @act_id}).at(0).updated_at%>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>
<%@the_movies.each do |char|%>
    <tr>
      <td>
        <%=Movie.where({:id => char.movie_id}).at(0).title%>%
      </td>

      <td>
        <%=Movie.where({:id => char.movie_id}).at(0).year%>%
      </td>

      <td>


          <%dir_id = Movie.where({:id => char.movie_id}).at(0).director_id%>
          <%= Director.where({:id => dir_id}).at(0).name%>
      </td>

      <td>
        <%=char.name%>

      </td>

      <td>
        <a href="/movies/<%=char.movie_id%>">
          Show details
        </a>
      </td>
    </tr>
    <%end%>
</table>



