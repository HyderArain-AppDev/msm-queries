    <h1>
  Director #<%=@dir_id%> details
</h1>

<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>



<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=Director.where({:id => @dir_id}).at(0).name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=Director.where({:id => @dir_id}).at(0).dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=Director.where({:id => @dir_id}).at(0).bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%=Director.where({:id => @dir_id}).at(0).image%>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=Director.where({:id => @dir_id}).at(0).created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=Director.where({:id => @dir_id}).at(0).updated_at%>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>
  <%@the_movies.each do |movie|%>
    <tr>
      <td>
        <%=movie.id%>
      </td>

      <td>
        <img src="<%=movie.image%>" style="width:250px;">
      </td>

      <td>
        <%=movie.title%>
      </td>

      <td>
        <%=movie.year%>
      </td>

      <td>
        <%=Director.where({:id => movie.director_id}).at(0).name%>
      </td>

      <td>
        <a href="/movies/<%=movie.id%>">
          Show details
        </a>
      </td>
    </tr>
  <%end%>
</table>

