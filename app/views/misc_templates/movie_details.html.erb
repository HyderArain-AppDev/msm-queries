  
    <h1>
  Movie #<%=@mov_id%> details
</h1>

<a href="/movies" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;


<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%=Movie.where({:id => @mov_id}).at(0).title%>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%=Movie.where({:id => @mov_id}).at(0).year%>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%=Movie.where({:id => @mov_id}).at(0).duration%>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%=Movie.where({:id => @mov_id}).at(0).description%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%=Movie.where({:id => @mov_id}).at(0).image%>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
      <%=@dir%>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=Movie.where({:id => @mov_id}).at(0).created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=Movie.where({:id => @mov_id}).at(0).updated_at%>
  </dd>
</dl>

